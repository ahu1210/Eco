<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical" >

    <com.fare.eco.externalLibrary.pullto.PullToRefreshGridView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/gv_near"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:horizontalSpacing="5dp"
        android:verticalSpacing="5dp"
        android:numColumns="2"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrHeaderBackground="@color/ptrHeaderBackground"
        ptr:ptrHeaderSubTextColor="@color/ptrHeaderSubTextColor"
        ptr:ptrHeaderTextColor="@color/ptrHeaderTextColor"
        ptr:ptrMode="both" >
    </com.fare.eco.externalLibrary.pullto.PullToRefreshGridView>

</LinearLayout>