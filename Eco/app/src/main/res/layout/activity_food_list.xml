<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <com.fare.eco.ui.view.TitleBarLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:padding="0dp" />

    <com.fare.eco.externalLibrary.pullto.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/lv_foodlist"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        ptr:ptrAnimationStyle="rotate"
        ptr:ptrDrawable="@drawable/ic_launcher"
        ptr:ptrHeaderBackground="@color/ptrHeaderBackground"
        ptr:ptrHeaderSubTextColor="@color/ptrHeaderSubTextColor"
        ptr:ptrHeaderTextColor="@color/ptrHeaderTextColor"
        ptr:ptrMode="both"
        ptr:ptrShowIndicator="true" >
    </com.fare.eco.externalLibrary.pullto.PullToRefreshListView>
</LinearLayout>
